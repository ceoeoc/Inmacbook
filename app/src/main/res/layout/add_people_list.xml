<?xml version="1.0" encoding="utf-8"?>
<com.example.admin.practice.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_size"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="328dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/notosanscjdemilight"
            android:gravity="center_vertical"
            android:text="name"
            android:paddingLeft="10dp"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="@dimen/text_size" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="14dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false" />


</com.example.admin.practice.CheckableLinearLayout>
