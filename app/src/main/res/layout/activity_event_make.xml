<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.eventMake">

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="212dp"
        android:layout_marginTop="408dp"
        android:onClick="onBackButtonClicked"
        android:text="취소"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/endDateButton"
        android:layout_width="220dp"
        android:layout_height="58dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="24dp"
        android:onClick="onEndEventClicked"
        android:text="이벤트 종료 날짜"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startDateButton" />

    <Button
        android:id="@+id/startDateButton"
        android:layout_width="220dp"
        android:layout_height="58dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="24dp"
        android:onClick="onStartEventClicked"
        android:text="이벤트 시작 날짜"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText3" />

    <NumberPicker
        android:id="@+id/timeMeasure"
        android:layout_width="220dp"
        android:layout_height="58dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/endDateButton" />

    <Button
        android:id="@+id/SelectPersonButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="408dp"
        android:onClick="onSelectPersonClicked"
        android:text="다음"
        app:layout_constraintEnd_toStartOf="@+id/cancel"
        app:layout_constraintHorizontal_bias="0.645"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="267dp"
        android:layout_height="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="52dp"
        android:hint="이벤트명"
        android:inputType="textCapWords"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>